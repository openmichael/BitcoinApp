<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.michael.bitcoinapp.CurrentPriceFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_bitcoin_price"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_above="@+id/bitcoin_price"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/bitcoin_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/bitcoin_value"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ProgressBar
            android:id="@+id/loading_bar"
            android:layout_width="42sp"
            android:layout_height="42sp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/max_day_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Price"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/min_day_price"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="38dp" />

        <TextView
            android:id="@+id/min_day_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Price"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:text="Bitcoin"
            android:textSize="72sp"
            android:textStyle="bold"
            android:id="@+id/textView7" />

        <TextView
            android:id="@+id/percentage_daily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:text="Percentage Daily"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_below="@+id/bitcoin_price"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/percentage_monthly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Percentage Monthly"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_below="@+id/percentage_daily"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignEnd="@+id/textView7" />

    </RelativeLayout>

</LinearLayout>
